    end
})

local UpioRSpyButton = MainTab:CreateButton({
    Name = "üîç Upio RSpy (Remote Spy)",
    Callback = function()
        SafeExecuteScript("https://github.com/notpoiu/cobalt/releases/latest/download/Cobalt.luau", "Upio RSpy")
    end
})

