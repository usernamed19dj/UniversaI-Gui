local GameSpecificSection = GameSpecificTab:CreateSection("Popular Game Scripts")

-- Game detection
local currentGameId = game.PlaceId
local currentGameName = game:GetService("MarketplaceService"):GetProductInfo(currentGameId).Name

local GameInfoLabel = GameSpecificTab:CreateLabel("Current Game: " .. currentGameName)

-- Common game scripts
local BloxFruitsButton = GameSpecificTab:CreateButton({
    Name = "üçé Blox Fruits Scripts",
    Callback = function()
        -- Set up Blox Fruits configuration
        _G.settings = { 
            autoLoadConfig = false, -- self explanatory 
            joinTeam = "Pirates" -- "Pirates" or "Marines" 
        }
        
        SafeExecuteScript("https://raw.githubusercontent.com/RO-HUB-CODEX/RO-HUB/refs/heads/main/bloxfruits.lua", "Blox Fruits Scripts")
