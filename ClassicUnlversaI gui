-- Create the "Official UnI.que" tab
local OfficialUniqueTab = Window:CreateTab("Official UnI.que", 4483362458)

local OfficialUniqueSection = OfficialUniqueTab:CreateSection("Custom Script Management")

-- Custom Script Input
local CustomScriptInput = OfficialUniqueTab:CreateInput({
    Name = "Custom Script URL",
    PlaceholderText = "Enter script URL here...",
    RemoveTextAfterFocusLost = false,
    Callback = function(Text)
        -- Store the custom script URL
        _G.CustomScriptURL = Text
    end
})

local ExecuteCustomButton = OfficialUniqueTab:CreateButton({
    Name = "üöÄ Execute Custom Script",
    Callback = function()
        if _G.CustomScriptURL and _G.CustomScriptURL ~= "" then
            SafeExecuteScript(_G.CustomScriptURL, "Custom Script")
        else
            Rayfield:Notify({
                Title = "Invalid Input",
                Content = "Please enter a valid script URL first!",
                Duration = 3,
                Image = 4483362458,
                Actions = {}
            })
        end
    end
})

-- Script Search Feature
local ScriptSearchSection = OfficialUniqueTab:CreateSection("Script Search & Discovery")

local ScriptSearchButton = OfficialUniqueTab:CreateButton({
    Name = "üîç Vase's Script Searcher",
    Callback = function()
        SafeExecuteScript("https://raw.githubusercontent.com/usernamed19dj/UniversaI-Gui/refs/heads/main/UI%20gui", "Vase's Script Searcher")
    end
})

