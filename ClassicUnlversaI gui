local UpdatesLabel4 = InfoTab:CreateLabel("‚Ä¢ Enhanced settings management")

-- Initialize notification on startup
if ScriptSettings.NotificationsEnabled then
    Rayfield:Notify({
        Title = "Welcome!",
        Content = "Universal Script Hub loaded successfully!",
        Duration = 4,
        Image = 4483362458,
        Actions = {}
    })
end

-- Auto-execute functionality
if ScriptSettings.AutoExecute then
    -- Add your auto-execute logic here
    wait(2)
    Rayfield:Notify({
        Title = "Auto-Execute",
        Content = "Auto-execute is enabled but no scripts are configured.",
        Duration = 3,
        Image = 4483362458,
        Actions = {}
    })
end

