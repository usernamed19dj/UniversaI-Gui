-- Create the "Settings" tab
local SettingsTab = Window:CreateTab("Settings", 4483362458)

local GeneralSection = SettingsTab:CreateSection("General Settings")

local NotificationsToggle = SettingsTab:CreateToggle({
    Name = "Enable Notifications",
    CurrentValue = ScriptSettings.NotificationsEnabled,
    Callback = function(Value)
        ScriptSettings.NotificationsEnabled = Value
        Rayfield:Notify({
            Title = "Settings",
            Content = "Notifications " .. (Value and "enabled" or "disabled"),
            Duration = 2,
            Image = 4483362458,
            Actions = {}
        })
    end
})

local SafeModeToggle = SettingsTab:CreateToggle({
    Name = "Safe Mode (Error Handling)",
    CurrentValue = ScriptSettings.SafeMode,
    Callback = function(Value)
        ScriptSettings.SafeMode = Value
    end
})

local ExecutionDelaySlider = SettingsTab:CreateSlider({
    Name = "Execution Delay (seconds)",
    Range = {0, 5},
    Increment = 0.5,
    Suffix = "s",
    CurrentValue = ScriptSettings.ExecutionDelay,
    Callback = function(Value)
        ScriptSettings.ExecutionDelay = Value
    end
})

local AutoExecuteToggle = SettingsTab:CreateToggle({
    Name = "Auto-Execute on Game Join",
    CurrentValue = ScriptSettings.AutoExecute,
    Callback = function(Value)
        ScriptSettings.AutoExecute = Value
    end
})

-- Advanced Settings Section
local AdvancedSection = SettingsTab:CreateSection("Advanced Settings")

local ResetCharacterButton = SettingsTab:CreateButton({
    Name = "üîÑ Reset Character",
    Callback = function()
        local player = game.Players.LocalPlayer
        if player and player.Character then
            player.Character:BreakJoints()
            Rayfield:Notify({
                Title = "Character Reset",
                Content = "Character has been reset!",
                Duration = 3,
                Image = 4483362458,
                Actions = {}
            })
        end
    end
})

local RejoinButton = SettingsTab:CreateButton({
    Name = "üîÑ Rejoin Server",
    Callback = function()
        Rayfield:Notify({
            Title = "Rejoining",
            Content = "Rejoining current server...",
            Duration = 2,
            Image = 4483362458,
            Actions = {}
        })
        wait(1)
        game:GetService("TeleportService"):Teleport(game.PlaceId)
    end
})

local ServerHopButton = SettingsTab:CreateButton({
    Name = "üåê Server Hop",
    Callback = function()
        Rayfield:Notify({
            Title = "Server Hop",
            Content = "Finding a new server...",
            Duration = 2,
            Image = 4483362458,
            Actions = {}
        })
        
        local TeleportService = game:GetService("TeleportService")
        local HttpService = game:GetService("HttpService")
        
        local servers = {}
        local req = game:HttpGet("https://games.roblox.com/v1/games/" .. game.PlaceId .. "/servers/Public?sortOrder=Asc&limit=100")
        local body = HttpService:JSONDecode(req)
        
        for i, v in pairs(body.data) do
            if v.playing < v.maxPlayers and v.id ~= game.JobId then
                table.insert(servers, v.id)
            end
        end
        
        if #servers > 0 then
            TeleportService:TeleportToPlaceInstance(game.PlaceId, servers[math.random(1, #servers)])
        else
            Rayfield:Notify({
                Title = "Server Hop Failed",
                Content = "No available servers found!",
                Duration = 3,
                Image = 4483362458,
                Actions = {}
            })
        end
    end
})

-- Create the "Info" tab
local InfoTab = Window:CreateTab("Info", 4483362458)

local InfoSection = InfoTab:CreateSection("Script Hub Information")

local VersionLabel = InfoTab:CreateLabel("Version: 2.0.0")
local AuthorLabel = InfoTab:CreateLabel("Author: a Normal Vase on the table")
local LastUpdateLabel = InfoTab:CreateLabel("Last Updated: " .. os.date("%Y-%m-%d"))

local CreditsSection = InfoTab:CreateSection("Credits & Links")

local DiscordButton = InfoTab:CreateButton({
