--[[
Enhanced Rayfield Script Hub
Based on the guide at: https://docs.sirius.menu/rayfield

This expanded script demonstrates:
- Booting the Rayfield library
- Creating a window with enhanced configuration
- Multiple tabs with organized sections
- Various UI elements (buttons, toggles, sliders, dropdowns)
- Script execution with error handling
- Settings management
- Enhanced user experience features
]]

-- Boot the Rayfield library
local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

-- Create the main window
local Window = Rayfield:CreateWindow({
    Name = "UniversaI Script Hub",
    LoadingTitle = "UniversaI Gui v2.0",
    LoadingSubtitle = "by a Normal Vase on the table",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "UniversalScriptHub", 
        FileName = "UniversalGui_Config"
    },
    Discord = {
        Enabled = true,
        Invite = "https://discord.gg/Hx24ZkQ42G",
        RememberJoins = true
    },
    KeySystem = false,
    KeySettings = {
        Title = "Universal Script Hub",
        Subtitle = "Key System",
        Note = "Enter your access key to continue",
        FileName = "UniversalKey",
        SaveKey = true,
        GrabKeyFromSite = false,
        Key = {"UNIVERSAL2024", "SCRIPTHUB", "RAYFIELD"}
    }
})

-- Global variables for script management
local ScriptSettings = {
    AutoExecute = false,
    NotificationsEnabled = true,
    SafeMode = true,
    ExecutionDelay = 1
}

-- Utility function for safe script execution
local function SafeExecuteScript(scriptUrl, scriptName)
    if ScriptSettings.NotificationsEnabled then
        Rayfield:Notify({
            Title = "Script Execution",
            Content = "Loading " .. scriptName .. "...",
            Duration = 2,
            Image = 4483362458,
            Actions = {}
        })
    end
    
    local success, result = pcall(function()
        if ScriptSettings.ExecutionDelay > 0 then
            wait(ScriptSettings.ExecutionDelay)
        end
        loadstring(game:HttpGet(scriptUrl))()
    end)
    
    if not success then
        Rayfield:Notify({
            Title = "Script Error",
            Content = "Failed to execute " .. scriptName .. ": " .. tostring(result),
            Duration = 5,
            Image = 4483362458,
            Actions = {}
        })
    elseif ScriptSettings.NotificationsEnabled then
        Rayfield:Notify({
            Title = "Script Loaded",
            Content = scriptName .. " executed successfully!",
            Duration = 3,
            Image = 4483362458,
            Actions = {}
        })
    end
end

-- Create the "Main Scripts" tab
local MainTab = Window:CreateTab("Main Scripts", 4483362458)

-- Popular Scripts Section
local PopularSection = MainTab:CreateSection("Popular Script Collections")

local MspaintButton = MainTab:CreateButton({
    Name = "üé® Mspaint Upio",
    Callback = function()
        SafeExecuteScript("https://api.luarmor.net/files/v3/loaders/002c19202c9946e6047b0c6e0ad51f84.lua", "Mspaint Upio")
    end
})

